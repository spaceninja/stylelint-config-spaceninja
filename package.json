{
  "name": "stylelint-config-spaceninja",
  "version": "7.0.0",
  "description": "Spaceninja's stylelint config",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "config",
    "spaceninja",
    "css"
  ],
  "homepage": "https://github.com/spaceninja/stylelint-config-spaceninja#readme",
  "author": "Scott Vandehey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spaceninja/stylelint-config-spaceninja.git"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "bugs": {
    "url": "https://github.com/spaceninja/stylelint-config-spaceninja/issues"
  },
  "dependencies": {
    "stylelint-config-standard": "^22.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.1.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.19.0"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-config-stylelint": "13.1.1",
    "jest": "27.2.4",
    "jest-preset-stylelint": "4.1.1",
    "npm-run-all": "4.1.5",
    "npmpub": "5.0.0",
    "remark-cli": "10.0.0",
    "remark-preset-lint-consistent": "5.1.0",
    "remark-preset-lint-recommended": "6.1.1",
    "stylelint": "13.13.1"
  },
  "peerDependencies": {
    "stylelint": "^9.2.0 || ^13.0.0"
  },
  "scripts": {
    "dry-release": "npmpub --dry --verbose",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "release": "npmpub",
    "test": "jest",
    "watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  },
  "eslintIgnore": [
    "*.md"
  ],
  "jest": {
    "preset": "jest-preset-stylelint"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  }
}
