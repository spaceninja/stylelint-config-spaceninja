{
  "name": "stylelint-config-spaceninja",
  "version": "5.0.0",
  "description": "Spaceninja's stylelint config",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "config",
    "spaceninja",
    "css"
  ],
  "homepage": "https://github.com/spaceninja/stylelint-config-spaceninja#readme",
  "author": "Scott Vandehey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spaceninja/stylelint-config-spaceninja.git"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "bugs": {
    "url": "https://github.com/spaceninja/stylelint-config-spaceninja/issues"
  },
  "dependencies": {
    "stylelint-config-standard": "^19.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.0.0",
    "stylelint-order": "^3.0.0",
    "stylelint-scss": "^3.0.1"
  },
  "devDependencies": {
    "eslint": "6.6.0",
    "eslint-config-stylelint": "11.1.0",
    "jest": "25.1.0",
    "jest-preset-stylelint": "1.3.0",
    "npm-run-all": "4.1.5",
    "npmpub": "5.0.0",
    "remark-cli": "7.0.1",
    "remark-preset-lint-consistent": "2.0.3",
    "remark-preset-lint-recommended": "3.0.3",
    "stylelint": "12.0.0"
  },
  "peerDependencies": {
    "stylelint": "^9.2.0"
  },
  "scripts": {
    "dry-release": "npmpub --dry --verbose",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "release": "npmpub",
    "test": "jest",
    "watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  },
  "eslintIgnore": [
    "*.md"
  ],
  "jest": {
    "preset": "jest-preset-stylelint"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ]
  }
}
